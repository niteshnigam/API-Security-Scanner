{
  "info": {
    "_postman_id": "sample-collection-001",
    "name": "Sample API Collection",
    "description": "A sample Postman collection for testing the API Security Scanner",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"{{username}}\",\n    \"password\": \"{{password}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"{{email}}\",\n    \"username\": \"{{username}}\",\n    \"password\": \"{{password}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get User Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/profile?userId={{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "profile"],
              "query": [
                {
                  "key": "userId",
                  "value": "{{userId}}"
                }
              ]
            }
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"{{name}}\",\n    \"email\": \"{{email}}\",\n    \"bio\": \"{{bio}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "{{userId}}"]
            }
          }
        },
        {
          "name": "Search Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/search?q={{searchQuery}}&page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "{{searchQuery}}"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Files",
      "item": [
        {
          "name": "Download File",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/files/download?path={{filePath}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "files", "download"],
              "query": [
                {
                  "key": "path",
                  "value": "{{filePath}}"
                }
              ]
            }
          }
        },
        {
          "name": "Execute Command",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"command\": \"{{command}}\",\n    \"args\": []\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/system/execute",
              "host": ["{{baseUrl}}"],
              "path": ["api", "system", "execute"]
            }
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Get Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/products?category={{category}}&sort=price",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"],
              "query": [
                {
                  "key": "category",
                  "value": "{{category}}"
                },
                {
                  "key": "sort",
                  "value": "price"
                }
              ]
            }
          }
        },
        {
          "name": "Add Review",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"productId\": \"{{productId}}\",\n    \"rating\": 5,\n    \"comment\": \"{{reviewComment}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/products/review",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "review"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://api.example.com"
    },
    {
      "key": "username",
      "value": "testuser"
    },
    {
      "key": "password",
      "value": "testpass123"
    },
    {
      "key": "email",
      "value": "test@example.com"
    },
    {
      "key": "token",
      "value": "your-jwt-token"
    },
    {
      "key": "userId",
      "value": "123"
    },
    {
      "key": "searchQuery",
      "value": "john"
    },
    {
      "key": "filePath",
      "value": "documents/report.pdf"
    },
    {
      "key": "command",
      "value": "ls"
    },
    {
      "key": "category",
      "value": "electronics"
    },
    {
      "key": "productId",
      "value": "prod-001"
    },
    {
      "key": "reviewComment",
      "value": "Great product!"
    },
    {
      "key": "name",
      "value": "John Doe"
    },
    {
      "key": "bio",
      "value": "Software developer"
    }
  ]
}

